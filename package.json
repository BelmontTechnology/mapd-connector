{
  "name": "@mapd/mapd-con",
  "version": "1.4.3",
  "description": "An npm module containing the MapDCon library",
  "main": "src/mapd-con-es6.js",
  "watch": {
    "build": {
      "patterns": [
        "src/",
        "test/"
      ],
      "extensions": "js",
      "ignore": ""
    }
  },
  "scripts": {
    "docs": "esdoc -c .esdoc.json && open docs/index.html",
    "fullbuild": "npm run lint && npm run build && npm test && npm run docs",
    "lint": "eslint src/mapd-con-es6.js src/mapd-con-node-support.js",
    "test:cover": "istanbul cover _mocha -- ./test --require ./test/config.js --require ./test/setup.js",
    "test": "mocha ./test --require ./test/config.js --require ./test/setup.js",
    "build": "mkdir -p dist; webpack"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-1": "^6.5.0",
    "chai": "^3.5.0",
    "chai-spies": "^0.7.1",
    "esdoc": "^0.4.8",
    "eslint": "^3.0.1",
    "istanbul": "1.0.0-alpha.2",
    "mocha": "^2.5.3",
    "webpack": "^1.13.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/map-d/mapd-con"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/map-d/mapd-con/issues"
  },
  "homepage": "https://github.com/map-d/mapd-con#readme"
}
