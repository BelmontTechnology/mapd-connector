{
  "name": "@mapd/mapd-con",
  "version": "1.4.3",
  "description": "An npm module containing the MapDCon library",
  "main": "src/mapd-con-es6.js",
  "watch": {
    "build": {
      "patterns": [
        "src/",
        "test/"
      ],
      "extensions": "js",
      "ignore": ""
    }
  },
  "scripts": {
    "fullbuild": "npm run lint && npm run build && npm test && npm run generate-docs",
    "lint": "node_modules/eslint/bin/eslint.js src/mapd-con-es6.js src/mapd-con-node-support.js",
    "build": "bash scripts/build.sh",
    "babel": "bash scripts/babel.sh",
    "webpack": "mkdir -p dist; node_modules/webpack/bin/webpack.js",
    "test:unit": "istanbul cover _mocha -- ./test-unit --compilers js:babel-register --require ./test-unit/setup.js",
    "test:functional": "bash scripts/test-functional.sh",
    "generate-docs": "node_modules/esdoc/out/src/ESDocCLI.js -c esdoc.json",
    "watch": "npm-watch",
    "clean": "bash scripts/clean.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/map-d/mapd-con"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/map-d/mapd-con/issues"
  },
  "homepage": "https://github.com/map-d/mapd-con#readme",
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.4.0",
    "babel-eslint": "^4.1.6",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.4.3",
    "chai": "^3.5.0",
    "esdoc": "^0.4.3",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^3.1.0",
    "eslint-loader": "^1.2.0",
    "eslint-plugin-react": "^3.15.0",
    "expect": "1.18.0",
    "istanbul": "1.1.0-alpha.1",
    "jsdom": "^1.0.0",
    "mocha": "^2.3.4",
    "mocha-jenkins-reporter": "^0.1.9",
    "needle": "^1.0.0",
    "npm-watch": "^0.1.1",
    "webpack": "^1.12.10"
  },
  "dependencies": {
    "thrift": "^0.9.3"
  }
}
