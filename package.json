{
  "name": "@mapd/mapd-con",
  "version": "1.4.3",
  "description": "An npm module containing the MapDCon library",
  "main": "src/mapd-con-es6.js",
  "watch": {
    "build": {
      "patterns": [
        "src/",
        "test/"
      ],
      "extensions": "js",
      "ignore": ""
    }
  },
  "scripts": {
    "babel": "bash scripts/babel.sh",
    "build": "bash scripts/build.sh",
    "bump": "npm run shjs ../../scripts/check-coverage.js -- --bump",
    "clean": "bash scripts/clean.sh",
    "docs": "../../node_modules/.bin/esdoc -c .esdoc.json && open docs/index.html",
    "fullbuild": "npm run lint && npm run build && npm test && npm run docs",
    "lint": "../../node_modules/eslint/bin/eslint.js src/mapd-con-es6.js src/mapd-con-node-support.js",
    "shjs": "node --harmony_destructuring ../../node_modules/.bin/shjs",
    "test:check-cover": "npm run shjs ../../scripts/check-coverage.js",
    "test:cover": "../../node_modules/.bin/istanbul cover ../../node_modules/mocha/bin/_mocha -- ./test-unit --require ./test-unit/config.js --require ./test-unit/setup.js",
    "test:unit": "../../node_modules/.bin/mocha ./test-unit --require ./test-unit/config.js --require ./test-unit/setup.js",
    "watch": "npm-watch",
    "webpack": "mkdir -p dist; ../../node_modules/.bin/webpack --config ./webpack.config.es6.js && ../../node_modules/.bin/webpack --config ./webpack.config.node.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/map-d/mapd-con"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/map-d/mapd-con/issues"
  },
  "homepage": "https://github.com/map-d/mapd-con#readme"
}
